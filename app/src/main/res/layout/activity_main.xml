<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/titulobienvenida"
        android:layout_width="415dp"
        android:layout_height="43dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="Rick and Morty"
        app:layout_constraintBottom_toTopOf="@+id/fragmentmain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fragmentmain"
        android:layout_width="404dp"
        android:layout_height="582dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonfavoritos"
        app:layout_constraintEnd_toStartOf="@+id/buttonfavoritos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulobienvenida" />

    <Button
        android:id="@+id/buttonfavoritos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="Favoritos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentmain" />


</androidx.constraintlayout.widget.ConstraintLayout>